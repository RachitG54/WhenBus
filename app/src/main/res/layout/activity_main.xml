<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/road"
    tools:context="com.example.vamshijajam.whenbus.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"
        ></include>

    <AutoCompleteTextView
        android:id="@+id/autocomplete_Destination"
        android:hint="Destination"
        android:textColor="@color/black"
        android:singleLine="true"
        android:textColorHint="@color/colorPrimary"
        android:imeOptions="actionNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:id="@+id/autocomplete_Location"
        android:hint="Location"
        android:imeOptions="actionNext"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/black"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/autocomplete_Destination"
        android:layout_alignLeft="@+id/autocomplete_Destination"
        android:layout_alignStart="@+id/autocomplete_Destination" />

    <AutoCompleteTextView
        android:id="@+id/autoComplete_busno"
        android:hint="Busno"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/autocomplete_Location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/search_bus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/enter1"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/autoComplete_busno"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
